[color]
ui = true

[color "diff"]
whitespace = red reverse

[color "branch"]
current = yellow reverse
local = yellow
remote = green

[color "diff"]
meta = yellow bold
frag = magenta bold
old = red bold
new = green bold

[color "status"]
added = yellow
changed = green
untracked = cyan

[alias]
aa = add --all
ai = add --interactive
changes = diff --name-status -r
st = status -sb
ct = commit
ctl = commit -v
cta = commit --amend
ctm = commit -m
br = branch
cbr = rev-parse --abbrev-ref HEAD
co = checkout
cot = checkout -t
cob = checkout -b
mg = merge
df = diff
ds = diff --staged
wd = diff --color-words
irb = rebase --interactive
cp = cherry-pick -s
rh = reset --hard
lg = log -p
pl = pull
ph = push
phsu = push --set-upstream
lol = log --graph --decorate --pretty=oneline --abbrev-commit
lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
ls = ls-files
dt = difftool
glog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
lgl = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
stash-all = stash save --include-untracked

[core]
	excludesfile = /Users/braidn/.gitignore_global
  whitespace=fix,tab-in-indent,trailing-space,cr-at-eol
  editor = "nvim"
  autocrlf = input
  safecrlf = warn

[pager]
  diff = "delta"
  log = "delta"
  reflog = "delta"
  show = "delta"

[delta]
  plus-style = "syntax #012800"
  minus-style = "syntax #340001"
  syntax-theme = Monokai Extended
  navigate = true
  line-numbers = true
	side-by-side = true

[include]
  path = ~/.gitconfig.local

[hub]
protocol = https

[commit]
	gpgsign = true

[diff]
tool = vimdiff

[difftool]
prompt = false

[interactive]
  diffFilter = delta --color-only

[diff "gpg"]
  textconv = dotgpg unsafe_cat

[merge "gpg"]
  name = dotgpg merge driver
  driver = "dotgpg merge %O %A %B"

[merge]
    tool = vimdiff
    conflictstyle = diff3

[push]
  default = simple

[user]
	name = Braden Douglass
	email = braden.douglass@gmail.com
[github]
	user = braidn
[credential]
	helper = osxkeychain
[gpg]
	program = gpg
[init]
	defaultBranch = main
[credential "https://github.com"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
